<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.travelbuddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ItineraryActivity"></activity>
        <activity
            android:name=".ScrollingActivityExample"
            android:label="@string/title_activity_scrolling_example"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBarOrange" />
        <activity
            android:name=".CountrySearchActivity"
            android:label="@string/title_activity_country_search"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBarTeal">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.travelbuddy.MainActivity" />
        </activity>
        <activity
            android:name=".CountryPage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TopDest"
            android:label="@string/title_activity_top_dest"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBarGold" />
        <activity
            android:name=".NewTrip"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBarPurple"></activity>
        <activity
            android:name=".MyProfile"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>
