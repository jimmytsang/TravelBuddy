<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E69B48"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/country_search_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context="com.example.travelbuddy.TopDestActivity">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        card_view:cardBackgroundColor="#E69B48"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/paris" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:maxLines="3"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:text="Eiffel Tower"
                android:textColor="#FFF"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:maxLines="3"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:textColor="#222"
                android:text="Paris, France"
                android:textSize="14dp" />

            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/destination_add_fab_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="40dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_add_white_24dp"
                android:elevation="4dp"
                android:layout_gravity="end|bottom"
                card_view:fabSize="normal" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            card_view:cardBackgroundColor="#E69B48"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/thumbnail2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/macchu" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thumbnail2"
                    android:maxLines="3"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="Machu Picchu"
                    android:textColor="#FFF"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title2"
                    android:maxLines="3"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#222"
                    android:text="Peru"
                    android:textSize="14dp" />

            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/destination_add_fab_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="40dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_add_white_24dp"
                android:elevation="4dp"
                android:layout_gravity="end|bottom"
                card_view:fabSize="normal" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            card_view:cardBackgroundColor="#E69B48"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/thumbnail3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sydney" />

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thumbnail3"
                    android:maxLines="3"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="Sydney Opera House"
                    android:textColor="#FFF"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title3"
                    android:maxLines="3"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#222"
                    android:text="Sydney, Australia"
                    android:textSize="14dp" />

            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/destination_add_fab_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="40dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_add_white_24dp"
                android:elevation="4dp"
                android:layout_gravity="end|bottom"
                card_view:fabSize="normal" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            card_view:cardBackgroundColor="#E69B48"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/thumbnail4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/yellowstone" />

                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thumbnail4"
                    android:maxLines="3"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="Yellowstone National Park"
                    android:textColor="#FFF"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title4"
                    android:maxLines="3"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#222"
                    android:text="United States"
                    android:textSize="14dp" />

            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/destination_add_fab_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="40dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_add_white_24dp"
                android:elevation="4dp"
                android:layout_gravity="end|bottom"
                card_view:fabSize="normal" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            card_view:cardBackgroundColor="#E69B48"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/thumbnail5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/colosseum" />

                <TextView
                    android:id="@+id/title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thumbnail5"
                    android:maxLines="3"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="Colosseum"
                    android:textColor="#FFF"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title5"
                    android:maxLines="3"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#222"
                    android:text="Rome, Italy"
                    android:textSize="14dp" />

            </RelativeLayout>



            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/destination_add_fab_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="40dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_add_white_24dp"
                android:elevation="4dp"
                android:layout_gravity="end|bottom"
                card_view:fabSize="normal" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            card_view:cardBackgroundColor="#E69B48"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/thumbnail6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/grandcanyon" />

                <TextView
                    android:id="@+id/title6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thumbnail6"
                    android:maxLines="3"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="Grand Canyon"
                    android:textColor="#FFF"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title6"
                    android:maxLines="3"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#222"
                    android:text="National park with layered bands of red rock revealing millions of years of geological history"
                    android:textSize="14dp" />

            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/destination_add_fab_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="50dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_add_white_24dp"
                android:elevation="4dp"
                android:layout_gravity="end|bottom"
                card_view:fabSize="normal" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>
</LinearLayout>