<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#13467B</item>
        <item name="colorPrimaryDark">#13467B</item>
        <item name="colorAccent">#E97059</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#13467B</item>
        <item name="colorPrimaryDark">#13467B</item>
        <item name="colorAccent">#E97059</item>
    </style>
    <style name="AppTheme.NoActionBarOrange">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#13467B</item>
        <item name="colorPrimaryDark">#E97059</item>
        <item name="colorAccent">#E97059</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="AppTheme.NoActionBarTeal">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#13467B</item>
        <item name="colorPrimaryDark">#4D9AAA</item>
        <item name="colorAccent">#4D9AAA</item>
    </style>
    <style name="AppTheme.NoActionBarPurple">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#AC5997</item>
        <item name="colorPrimaryDark">#AC5997</item>
        <item name="colorAccent">#4D9AAA</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
